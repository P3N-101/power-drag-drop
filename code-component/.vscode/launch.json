{
    "configurations": [
      {
        "type": "node",
        "name": "vscode-jest-tests",
        "request": "launch",
        "args": ["${fileBasename}", "--runInBand", "--code-coverage=false" ],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "smartStep": true,
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    ]
  }
  